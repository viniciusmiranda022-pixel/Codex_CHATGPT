<UserControl x:Class="DirectoryAnalyzer.Views.ScheduledTasksAnalyzerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             Background="#f7f7f7">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="â°" FontSize="20" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="Directory Analyzer - Scheduled Tasks"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#111111"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </DockPanel>

        <GroupBox Grid.Row="1" Header="ConfiguraÃ§Ã£o de Escopo (Busca de Computadores no AD)" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Atributo de Escopo:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="1" x:Name="ScopeAttributeBox" Text="description" Margin="5"/>
                <TextBlock Grid.Column="2" Text="Valor do Atributo:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="3" x:Name="ScopeValueBox" Text="migrar" Margin="5"/>
            </Grid>
        </GroupBox>

        <Button Grid.Row="2"
                Content="â–¶ Executar Coleta de Tarefas Agendadas"
                Click="RunTasksCollection"
                Background="#0078D7"
                Foreground="White"
                FontWeight="SemiBold"
                Padding="12,6"
                BorderThickness="0"
                Cursor="Hand"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"/>

        <TextBlock x:Name="ProgressText"
                   Grid.Row="3"
                   Text="â³ Coletando informaÃ§Ãµes de tarefas agendadas..."
                   FontStyle="Italic"
                   Foreground="#4a90e2"
                   Visibility="Collapsed"
                   Margin="0,0,0,10"/>

        <DataGrid x:Name="TasksGrid"
                  Grid.Row="4"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  FontSize="13"
                  RowBackground="#ffffff"
                  AlternatingRowBackground="#f0f0f0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Computador" Binding="{Binding ComputerName}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding State}" Width="*"/>
                <DataGridTextColumn Header="Nome da Tarefa" Binding="{Binding TaskName}" Width="2*"/>
                <DataGridTextColumn Header="UsuÃ¡rio Executor" Binding="{Binding UserId}" Width="2*"/>
                <DataGridTextColumn Header="Caminho" Binding="{Binding TaskPath}" Width="3*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="ðŸ—Ž Exportar CSV" Margin="5,0" Padding="10,6" Click="ExportCsv_Click" Background="#ffffff" BorderBrush="#0078D7" Foreground="#0078D7" BorderThickness="1" FontWeight="SemiBold" Cursor="Hand"/>
            <Button Content="ðŸ— Exportar XML" Margin="5,0" Padding="10,6" Click="ExportXml_Click" Background="#ffffff" BorderBrush="#0078D7" Foreground="#0078D7" BorderThickness="1" FontWeight="SemiBold" Cursor="Hand"/>
            <Button Content="ðŸŒ Exportar HTML" Margin="5,0" Padding="10,6" Click="ExportHtml_Click" Background="#ffffff" BorderBrush="#0078D7" Foreground="#0078D7" BorderThickness="1" FontWeight="SemiBold" Cursor="Hand"/>
            <Button Content="ðŸ›¢ Exportar SQL" Margin="5,0" Padding="10,6" Click="ExportSql_Click" Background="#ffffff" BorderBrush="#0078D7" Foreground="#0078D7" BorderThickness="1" FontWeight="SemiBold" Cursor="Hand"/>
        </StackPanel>

        <Border Grid.Row="6" Background="#e9f1fb" CornerRadius="4" Padding="10" Margin="0,10,0,0">
            <TextBlock x:Name="StatusText"
                       Text="âœ”ï¸ Pronto para iniciar a coleta."
                       FontSize="13"
                       Foreground="#004d99"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>