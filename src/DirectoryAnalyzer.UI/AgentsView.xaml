<UserControl x:Class="DirectoryAnalyzer.Views.AgentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <DockPanel LastChildFill="False">
                <StackPanel>
                    <TextBlock Text="Agents" Style="{StaticResource TitleTextStyle}"/>
                    <TextBlock Text="Configure o broker mTLS e visualize agentes conectados." Style="{StaticResource SubtitleTextStyle}" Margin="0,6,0,0"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Descobrir" Style="{StaticResource OutlineButtonStyle}" Command="{Binding DiscoverCommand}"/>
                    <Button Content="Salvar" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding SaveCommand}" Margin="10,0,0,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Broker Base URL" Style="{StaticResource SectionHeaderTextStyle}"/>
                    <TextBox Text="{Binding BrokerBaseUrl}" Margin="0,8,0,0"/>
                    <TextBlock Text="Client Cert Thumbprint" Style="{StaticResource SectionHeaderTextStyle}" Margin="0,12,0,0"/>
                    <TextBox Text="{Binding ClientCertThumbprint}" Margin="0,8,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                    <TextBlock Text="Timeout (s) / Poll Interval (s)" Style="{StaticResource SectionHeaderTextStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBox Text="{Binding RequestTimeoutSeconds}" Width="80" Margin="0,0,10,0"/>
                        <TextBox Text="{Binding PollIntervalSeconds}" Width="80"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,12,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Agents}" Grid.Row="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="AgentId" Binding="{Binding AgentId}" Width="2*"/>
                        <DataGridTextColumn Header="Host" Binding="{Binding Host}" Width="2*"/>
                        <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="*"/>
                        <DataGridTextColumn Header="Capabilities" Binding="{Binding CapabilitiesDisplay}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
