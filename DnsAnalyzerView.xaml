<UserControl x:Class="DirectoryAnalyzer.Views.DnsAnalyzerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f7f7f7">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÃ­tulo -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ§­" FontSize="20" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="Directory Analyzer - DNS"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#111111"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </DockPanel>

        <!-- BotÃ£o de ExecuÃ§Ã£o -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="â–¶ Executar Coleta Completa de DNS"
                    Command="{Binding RunCommand}"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Padding="12,6"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Left"/>
            <Button Content="â¹ Cancelar"
                    Command="{Binding CancelCommand}"
                    Background="#ffffff"
                    BorderBrush="#d9534f"
                    Foreground="#d9534f"
                    BorderThickness="1"
                    FontWeight="SemiBold"
                    Padding="12,6"
                    Margin="10,0,0,0"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Mensagem de Progresso -->
        <TextBlock x:Name="ProgressText"
                   Grid.Row="2"
                   Text="{Binding ProgressMessage}"
                   FontStyle="Italic"
                   Foreground="#4a90e2"
                   Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Margin="0,0,0,10"/>

        <!-- Abas -->
        <TabControl Grid.Row="3" x:Name="ReportTabs" Background="White" BorderBrush="#ccc" BorderThickness="1"
                    SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Header="Zonas">
                <DataGrid x:Name="ZonasGrid"
                          AutoGenerateColumns="True"
                          AlternatingRowBackground="#f0f0f0"
                          RowBackground="#ffffff"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Margin="0"
                          FontSize="13"
                          IsReadOnly="True"
                          ItemsSource="{Binding Zones}"/>
            </TabItem>

            <TabItem Header="Registros">
                <DataGrid x:Name="RegistrosGrid"
                          AutoGenerateColumns="True"
                          AlternatingRowBackground="#f0f0f0"
                          RowBackground="#ffffff"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Margin="0"
                          FontSize="13"
                          IsReadOnly="True"
                          ItemsSource="{Binding Records}"/>
            </TabItem>

            <TabItem Header="Encaminhadores">
                <DataGrid x:Name="ForwardersGrid"
                          AutoGenerateColumns="True"
                          AlternatingRowBackground="#f0f0f0"
                          RowBackground="#ffffff"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Margin="0"
                          FontSize="13"
                          IsReadOnly="True"
                          ItemsSource="{Binding Forwarders}"/>
            </TabItem>
        </TabControl>

        <!-- BotÃµes de ExportaÃ§Ã£o -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="ðŸ—Ž Exportar CSV" Margin="5,0" Padding="10,6" Command="{Binding ExportCsvCommand}"
                    Background="#ffffff" BorderBrush="#0078D7" Foreground="#0078D7"
                    BorderThickness="1" FontWeight="SemiBold" Cursor="Hand"/>
            <Button Content="ðŸ— Exportar XML" Margin="5,0" Padding="10,6" Command="{Binding ExportXmlCommand}"
                    Background="#ffffff" BorderBrush="#0078D7" Foreground="#0078D7"
                    BorderThickness="1" FontWeight="SemiBold" Cursor="Hand"/>
            <Button Content="ðŸŒ Exportar HTML" Margin="5,0" Padding="10,6" Command="{Binding ExportHtmlCommand}"
                    Background="#ffffff" BorderBrush="#0078D7" Foreground="#0078D7"
                    BorderThickness="1" FontWeight="SemiBold" Cursor="Hand"/>
            <Button Content="ðŸ›¢ Exportar SQL" Margin="5,0" Padding="10,6" Command="{Binding ExportSqlCommand}"
                    Background="#ffffff" BorderBrush="#0078D7" Foreground="#0078D7"
                    BorderThickness="1" FontWeight="SemiBold" Cursor="Hand"/>
        </StackPanel>

        <!-- Status -->
        <Border Grid.Row="5" Background="#e9f1fb" CornerRadius="4" Padding="10" Margin="0,10,0,0">
            <TextBlock x:Name="StatusText"
                       Text="{Binding StatusMessage}"
                       FontSize="13"
                       Foreground="#004d99"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
