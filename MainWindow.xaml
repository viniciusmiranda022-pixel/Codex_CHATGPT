<Window x:Class="DirectoryAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Directory Analyzer"
        Height="700" Width="1000"
        Background="#f7f7f7"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Paleta de Cores -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0078D7"/>
        <SolidColorBrush x:Key="MenuBackground" Color="#1f1f1f"/>
        <SolidColorBrush x:Key="PageBackground" Color="#f7f7f7"/>
        <SolidColorBrush x:Key="TextDark" Color="#111111"/>
        <SolidColorBrush x:Key="TextMuted" Color="#666666"/>

        <!-- Estilo do Menu Lateral -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D7"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Lateral -->
        <StackPanel Grid.Column="0" Background="{StaticResource MenuBackground}">
            <TextBlock Text="Directory Analyzer"
                       Foreground="White"
                       FontSize="18" FontWeight="Bold"
                       Margin="10,20,10,10"/>
            <ListBox x:Name="NavigationMenu"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectedIndex="0"
                     SelectionChanged="NavigationMenu_SelectionChanged">
                <ListBoxItem Content="DNS Analyzer"/>
                <ListBoxItem Content="GPO Analyzer"/>
                <ListBoxItem Content="SMB Shares Analyzer"/>
                <ListBoxItem Content="Scheduled Tasks Analyzer"/>
                <ListBoxItem Content="Local Profiles Analyzer"/>
                <ListBoxItem Content="Service Account Analyzer"/>
                <ListBoxItem Content="Local Security Policy Analyzer"/>
                <ListBoxItem Content="IIS AppPools Analyzer"/>
                <ListBoxItem Content="Trusts Analyzer"/>
                <ListBoxItem Content="ProxyAddresses Analyzer"/>
            </ListBox>
        </StackPanel>

        <!-- ConteÃºdo Principal -->
        <Grid Grid.Column="1" Background="{StaticResource PageBackground}" Margin="20">
            <ContentControl x:Name="ContentArea"/>
        </Grid>
    </Grid>
</Window>
