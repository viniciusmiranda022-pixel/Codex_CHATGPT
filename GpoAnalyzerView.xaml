<UserControl x:Class="DirectoryAnalyzer.Views.GpoAnalyzerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             Background="{StaticResource BackgroundBrush}">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <DockPanel LastChildFill="False">
                <StackPanel>
                    <TextBlock Text="GPO Analyzer" Style="{StaticResource TitleTextStyle}"/>
                    <TextBlock Text="Inventário de políticas, vínculos e delegações." Style="{StaticResource SubtitleTextStyle}" Margin="0,6,0,0"/>
                </StackPanel>
                <Button DockPanel.Dock="Right"
                        Content="Executar Coleta"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="RunFullGpoCollection"/>
            </DockPanel>
        </Border>

        <TextBlock x:Name="ProgressText"
                   Grid.Row="1"
                   Text="⏳ Coletando informações de GPOs..."
                   Style="{StaticResource CaptionTextStyle}"
                   Foreground="{StaticResource PrimaryBrush}"
                   Visibility="Collapsed"
                   Margin="6,12,0,0"/>

        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,16,0,0">
            <TabControl x:Name="ReportTabs">
                <TabItem Header="Resumo">
                    <DataGrid x:Name="ResumoGrid" AutoGenerateColumns="True"/>
                </TabItem>
                <TabItem Header="Vínculos (Links)">
                    <DataGrid x:Name="LinksGrid" AutoGenerateColumns="True"/>
                </TabItem>
                <TabItem Header="Delegação">
                    <DataGrid x:Name="DelegacaoGrid" AutoGenerateColumns="True"/>
                </TabItem>
                <TabItem Header="Filtros de Segurança">
                    <DataGrid x:Name="SecurityFilteringGrid" AutoGenerateColumns="True"/>
                </TabItem>
                <TabItem Header="Filtros WMI">
                    <DataGrid x:Name="WmiFiltersGrid" AutoGenerateColumns="True"/>
                </TabItem>
            </TabControl>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Exportar CSV" Style="{StaticResource OutlineButtonStyle}" Click="ExportCsv_Click"/>
            <Button Content="Exportar XML" Style="{StaticResource OutlineButtonStyle}" Click="ExportXml_Click" Margin="10,0,0,0"/>
            <Button Content="Exportar HTML" Style="{StaticResource OutlineButtonStyle}" Click="ExportHtml_Click" Margin="10,0,0,0"/>
            <Button Content="Exportar SQL" Style="{StaticResource OutlineButtonStyle}" Click="ExportSql_Click" Margin="10,0,0,0"/>
        </StackPanel>

        <Border Grid.Row="4" Style="{StaticResource CardStyle}" Margin="0,16,0,0" Padding="12">
            <TextBlock x:Name="StatusText" Text="✔️ Pronto para iniciar a coleta." Style="{StaticResource CaptionTextStyle}"/>
        </Border>
    </Grid>
</UserControl>
