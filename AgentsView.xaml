<UserControl x:Class="DirectoryAnalyzer.Views.AgentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <DockPanel LastChildFill="False">
                <StackPanel>
                    <TextBlock Text="Agents" Style="{StaticResource TitleTextStyle}"/>
                    <TextBlock Text="Configure conexões mTLS e descubra agentes disponíveis." Style="{StaticResource SubtitleTextStyle}" Margin="0,6,0,0"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Descobrir" Style="{StaticResource OutlineButtonStyle}" Command="{Binding DiscoverCommand}"/>
                    <Button Content="Salvar" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding SaveCommand}" Margin="10,0,0,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Agent Mode" Style="{StaticResource SectionHeaderTextStyle}"/>
                    <CheckBox Content="Habilitar Agent Mode" IsChecked="{Binding AgentModeEnabled}" Margin="0,8,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                    <TextBlock Text="Client Cert Thumbprint" Style="{StaticResource SectionHeaderTextStyle}"/>
                    <TextBox Text="{Binding ClientCertThumbprint}" Margin="0,8,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="16,0,0,0">
                    <TextBlock Text="Timeout (s) / Retries" Style="{StaticResource SectionHeaderTextStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBox Text="{Binding RequestTimeoutSeconds}" Width="80" Margin="0,0,10,0"/>
                        <TextBox Text="{Binding MaxRetries}" Width="60"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,12,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Agents}" SelectedItem="{Binding SelectedAgent}" Grid.Row="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Endpoint" Binding="{Binding Endpoint}" Width="3*"/>
                        <DataGridTextColumn Header="Allowed Server Thumbprints" Binding="{Binding AllowedThumbprintsDisplay}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button Content="Adicionar" Style="{StaticResource OutlineButtonStyle}" Command="{Binding AddAgentCommand}"/>
                    <Button Content="Remover" Style="{StaticResource DangerButtonStyle}" Command="{Binding RemoveAgentCommand}" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
